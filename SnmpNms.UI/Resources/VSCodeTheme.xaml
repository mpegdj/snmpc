<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- VS Code Dark+ Theme Colors -->
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="VSCodeBackground" Color="#1e1e1e"/>
    <SolidColorBrush x:Key="VSCodeSidebarBackground" Color="#f3f3f3"/>
    <SolidColorBrush x:Key="VSCodeActivityBarBackground" Color="#f3f3f3"/>
    <SolidColorBrush x:Key="VSCodeEditorBackground" Color="#ffffff"/>
    <SolidColorBrush x:Key="VSCodePanelBackground" Color="#f3f3f3"/>
    <SolidColorBrush x:Key="VSCodeStatusBarBackground" Color="#007acc"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="VSCodeForeground" Color="#000000"/>
    <SolidColorBrush x:Key="VSCodeSecondaryForeground" Color="#666666"/>
    <SolidColorBrush x:Key="VSCodeDisabledForeground" Color="#999999"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="VSCodeAccent" Color="#007acc"/>
    <SolidColorBrush x:Key="VSCodeAccentHover" Color="#0098ff"/>
    <!-- VS Code Light+ 선택 색상: 은은한 파란색 (투명도 포함) -->
    <!-- VS Code Light+ 테마의 실제 선택 색상: #add6ff (약간 투명한 밝은 파란색) -->
    <SolidColorBrush x:Key="VSCodeSelection" Color="#add6ff"/>
    <SolidColorBrush x:Key="VSCodeHover" Color="#e5e5e5"/>
    
    <!-- Tab Colors -->
    <SolidColorBrush x:Key="VSCodeTabInactiveBackground" Color="#2d2d30"/>
    <SolidColorBrush x:Key="VSCodeTabActiveBackground" Color="#1e1e1e"/>
    <SolidColorBrush x:Key="VSCodeTabBorder" Color="#3c3c3c"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="VSCodeBorder" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="VSCodeDivider" Color="#E0E0E0"/>
    
    <!-- Activity Bar Button Style -->
    <Style x:Key="ActivityBarButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource VSCodeHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Activity Bar Button Active Style -->
    <Style x:Key="ActivityBarButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource ActivityBarButtonStyle}">
        <Setter Property="Background" Value="{StaticResource VSCodeSelection}"/>
        <Setter Property="BorderBrush" Value="{StaticResource VSCodeAccent}"/>
        <Setter Property="BorderThickness" Value="0,0,3,0"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource VSCodeSelection}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Activity Bar Icon Style -->
    <Style x:Key="ActivityBarIconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Foreground" Value="#000000"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <!-- Activity Bar Icon Style (Active) -->
    <Style x:Key="ActivityBarIconActiveStyle" TargetType="TextBlock" BasedOn="{StaticResource ActivityBarIconStyle}">
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <!-- Sidebar Style -->
    <Style x:Key="SidebarStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource VSCodeSidebarBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource VSCodeBorder}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
    </Style>
    
    <!-- VS Code Tab Style -->
    <Style x:Key="VSCodeTabItemStyle" TargetType="TabItem">
        <Setter Property="Background" Value="{StaticResource VSCodeTabInactiveBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource VSCodeForeground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource VSCodeTabBorder}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="13"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource VSCodeTabActiveBackground}"/>
                <Setter Property="BorderBrush" Value="{StaticResource VSCodeTabBorder}"/>
                <Setter Property="BorderThickness" Value="0,0,1,0"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource VSCodeHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- VS Code TabControl Style -->
    <Style x:Key="VSCodeTabControlStyle" TargetType="TabControl">
        <Setter Property="Background" Value="{StaticResource VSCodeEditorBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource VSCodeBorder}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <!-- Panel Tab Style -->
    <Style x:Key="PanelTabItemStyle" TargetType="TabItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource VSCodeForeground}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="12"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource VSCodeSelection}"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource VSCodeHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Panel Tab Radio Button Style (탭처럼 보이는 라디오 버튼) -->
    <Style x:Key="PanelTabRadioStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource VSCodeForeground}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource VSCodeSelection}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource VSCodeHover}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource VSCodeDisabledForeground}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- TreeView Style (VS Code style) -->
    <Style x:Key="VSCodeTreeViewStyle" TargetType="TreeView">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource VSCodeForeground}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <!-- TreeViewItem Style (VS Code style) -->
    <!-- TreeView depth indent (per level) -->
    <Thickness x:Key="VSCodeTreeIndent">8,0,0,0</Thickness>
    
    <Style x:Key="VSCodeTreeViewItemStyle" TargetType="TreeViewItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource VSCodeForeground}"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TreeViewItem">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Expander (triangle) -->
                        <ToggleButton x:Name="Expander"
                                      Grid.Row="0" Grid.Column="0"
                                      Width="14" Height="14"
                                      Margin="2,0,0,0"
                                      Focusable="False"
                                      IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                      Background="Transparent"
                                      BorderThickness="0">
                            <Path x:Name="ExpanderPath"
                                  Fill="{StaticResource VSCodeSecondaryForeground}"
                                  Data="M 0 0 L 0 8 L 6 4 Z"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="0"/>
                                </Path.RenderTransform>
                            </Path>
                        </ToggleButton>

                        <!-- Header -->
                        <Border x:Name="Bd"
                                Grid.Row="0" Grid.Column="1"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="PART_Header"
                                              ContentSource="Header"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>

                        <!-- Children -->
                        <ItemsPresenter x:Name="ItemsHost"
                                        Grid.Row="1" Grid.Column="1"
                                        Margin="{StaticResource VSCodeTreeIndent}"
                                        Visibility="Collapsed"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="True">
                            <Setter TargetName="ItemsHost" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="ExpanderPath" Property="RenderTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="90"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger Property="HasItems" Value="False">
                            <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource VSCodeHover}"/>
                        </Trigger>

                        <!-- Selection colors: rely on SystemColors keys overridden in TreeView.Resources -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="IsSelectionActive" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="IsSelectionActive" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightBrushKey}}"/>
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}}"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource VSCodeForeground}"/>
            </Style>
        </Style.Resources>
        <Style.Triggers>
            <!-- 선택 시 색상 변경 제거: WPF 기본 동작 사용 -->
            <!-- IsSelected 트리거 제거하여 WPF 기본 선택 동작 사용 -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource VSCodeHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Status Bar Style -->
    <Style x:Key="VSCodeStatusBarStyle" TargetType="StatusBar">
        <Setter Property="Background" Value="{StaticResource VSCodeStatusBarBackground}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Height" Value="22"/>
        <Setter Property="Padding" Value="8,0"/>
    </Style>
    
    <!-- Panel Header Style -->
    <Style x:Key="PanelHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource VSCodeSidebarBackground}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="28"/>
    </Style>
    
    <!-- Panel Toggle Button Style -->
    <Style x:Key="PanelToggleButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="35"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource VSCodeHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>

