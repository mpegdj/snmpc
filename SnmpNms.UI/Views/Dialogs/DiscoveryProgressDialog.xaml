<Window x:Class="SnmpNms.UI.Views.Dialogs.DiscoveryProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Discovery Progress" Height="500" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="400" MinWidth="650">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Progress Log -->
        <GroupBox Grid.Row="0" Header="Discovery Progress" Margin="0,0,0,12">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
                    <TextBlock Name="txtStatus" Text="Starting discovery..." FontWeight="Bold" Margin="0,0,8,0"/>
                    <TextBlock Name="txtProgress" Text="0 devices found" Foreground="Blue"/>
                </StackPanel>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBlock Name="txtLog" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11" Margin="8"/>
                </ScrollViewer>
            </DockPanel>
        </GroupBox>
        
        <!-- Discovered Devices List -->
        <GroupBox Grid.Row="1" Header="Discovered Devices" Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <DataGrid Name="dataGridDevices" 
                          Grid.Row="0"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          SelectionMode="Extended"
                          SelectionUnit="FullRow"
                          GridLinesVisibility="All"
                          AlternatingRowBackground="#F5F5F5"
                          HeadersVisibility="Column"
                          MaxHeight="150">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Add" Binding="{Binding IsSelected}" Width="50"/>
                        <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Maker" Binding="{Binding Maker}" Width="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Device Name" Binding="{Binding DeviceName}" Width="150" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Community" Binding="{Binding Community}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="80" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Right">
                    <Button Content="All" Width="60" Margin="0,0,4,0" Click="BtnAllToggle_Click"/>
                    <Button Content="SNMP" Width="70" Margin="0,0,4,0" Click="BtnSnmpToggle_Click"/>
                    <Button Content="Ping" Width="70" Margin="0,0,4,0" Click="BtnPingToggle_Click"/>
                    <Button Content="V1" Width="50" Margin="0,0,4,0" Click="BtnV1Toggle_Click"/>
                    <Button Content="V2" Width="50" Margin="0,0,8,0" Click="BtnV2Toggle_Click"/>
                    <TextBlock Text="Maker:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <ComboBox Name="cmbMakerFilter" 
                              Width="120" 
                              Margin="0,0,8,0"
                              SelectionChanged="CmbMakerFilter_SelectionChanged">
                        <ComboBoxItem Content="None" IsSelected="True"/>
                    </ComboBox>
                    <TextBlock Text="Device:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <ComboBox Name="cmbDeviceFilter" 
                              Width="150"
                              SelectionChanged="CmbDeviceFilter_SelectionChanged">
                        <ComboBoxItem Content="None" IsSelected="True"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Subnet Groups -->
        <GroupBox Grid.Row="2" Header="Subnets" Margin="0,0,0,12" MaxHeight="120">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding SubnetGroups}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected}" Margin="4,2">
                                <CheckBox.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding SubnetName}" FontWeight="Bold" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Devices.Count, StringFormat='({0} devices)'}" 
                                                   Foreground="Gray" FontStyle="Italic"/>
                                    </StackPanel>
                                </CheckBox.Content>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Options -->
        <StackPanel Grid.Row="3" Margin="0,0,0,8">
            <CheckBox Name="chkAddWithoutSubnet" 
                      Content="Add devices without subnet (directly under Default)"
                      Margin="0,0,0,4"
                      IsChecked="{Binding AddDevicesWithoutSubnet}"/>
            <CheckBox Name="chkConfigureTrap" 
                      Content="Configure Trap Destination for selected devices"
                      Margin="0,0,0,4"
                      IsChecked="{Binding ConfigureTrapDestination}"/>
            <CheckBox Name="chkStandardNtt" 
                      Content="Standard NTT (MVE5000/MVD5000 Trap)"
                      IsChecked="{Binding ConfigureStandardNttTrap}"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
            <Button Content="Stop" Width="75" Height="28" Margin="0,0,8,0" Click="BtnStop_Click" Name="btnStop"/>
            <Button Content="OK" Width="75" Height="28" Margin="0,0,8,0" IsDefault="True" Click="BtnOk_Click" Name="btnOk" IsEnabled="False"/>
            <Button Content="Cancel" Width="75" Height="28" IsCancel="True" Name="btnCancel"/>
        </StackPanel>
    </Grid>
</Window>

