<Window x:Class="SnmpNms.UI.Views.Dialogs.PingLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ping Log" Height="320" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="240" MinWidth="420"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="{Binding TargetHost}" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="  (running...)" Foreground="#666" Margin="8,0,0,0" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Stop" Width="70" Height="26" Margin="12,0,0,0" Click="Stop_Click"/>
                <Button Content="Close" Width="70" Height="26" Margin="8,0,0,0" Click="Close_Click"/>
            </StackPanel>
        </StackPanel>

        <TextBox x:Name="txtLog"
                 FontFamily="Consolas"
                 FontSize="12"
                 IsReadOnly="True"
                 TextWrapping="NoWrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"/>
    </DockPanel>
</Window>


