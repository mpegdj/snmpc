<Window x:Class="SnmpNms.UI.Views.Dialogs.CompileMibsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compile MIBs" Height="500" Width="700"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="MIB Files to Compile:" FontWeight="Bold" Margin="0,0,0,8"/>

        <!-- MIB Files List -->
        <Border Grid.Row="1" BorderBrush="{StaticResource VSCodeDivider}" BorderThickness="1" Margin="0,0,0,8">
            <ListBox Name="listMibFiles" SelectionMode="Extended">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,8">
            <Button Content="Add..." Width="80" Height="28" Margin="0,0,8,0" Click="BtnAdd_Click"/>
            <Button Content="Remove" Width="80" Height="28" Margin="0,0,8,0" Click="BtnRemove_Click" IsEnabled="{Binding ElementName=listMibFiles, Path=SelectedItems.Count}"/>
            <Button Content="Clear" Width="80" Height="28" Click="BtnClear_Click"/>
        </StackPanel>

        <!-- History/Log Tab -->
        <TabControl Grid.Row="3" Margin="0,0,0,8">
            <TabItem Header="History">
                <Border BorderBrush="{StaticResource VSCodeDivider}" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBlock Name="txtHistory" TextWrapping="Wrap" Padding="8" FontFamily="Consolas" FontSize="11"/>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Compile" Width="100" Height="28" Margin="0,0,8,0" Click="BtnCompile_Click" IsDefault="True"/>
            <Button Content="Close" Width="80" Height="28" Click="BtnClose_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

