<Window x:Class="SnmpNms.UI.Views.Dialogs.LookupPreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lookup Debug / Preview" Height="520" Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="420" MinWidth="640">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
            <TextBlock Text="{Binding TitleText}" FontWeight="SemiBold" FontSize="14"/>
            <TextBlock Margin="0,2,0,0" Foreground="#666"
                       Text="Lookup 결과를 확인한 뒤 OK(적용) / Cancel(미적용)을 선택하세요."/>
        </StackPanel>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <GroupBox Grid.Row="0" Header="Proposed Values" Margin="0,0,0,8">
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Margin="0,2,0,6"
                             Text="{Binding ProposedName, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" VerticalAlignment="Top"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Height="70" Margin="0,2,0,0"
                             AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                             Text="{Binding ProposedDescription, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="1" Header="Command / Result Log">
                <TextBox Margin="8"
                         FontFamily="Consolas"
                         FontSize="12"
                         IsReadOnly="True"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         Text="{Binding LogText}"/>
            </GroupBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Width="80" Height="26" Margin="0,0,8,0" Content="OK" IsDefault="True" Click="Ok_Click"/>
                <Button Width="80" Height="26" Content="Cancel" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>


