<UserControl x:Class="SnmpNms.UI.Views.BottomPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:eventLog="clr-namespace:SnmpNms.UI.Views.EventLog"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="800"
             MinHeight="120"
             Background="{StaticResource VSCodePanelBackground}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Panel Header with Tab Headers -->
        <Border Grid.Row="0" 
                Style="{StaticResource PanelHeaderStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Tab Headers -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <RadioButton x:Name="rbEventLog" Content="Event Log" 
                                 Style="{StaticResource PanelTabRadioStyle}"
                                 IsChecked="True" Checked="TabRadio_Checked"/>
                    <RadioButton x:Name="rbOutput" Content="Output" 
                                 Style="{StaticResource PanelTabRadioStyle}"
                                 Checked="TabRadio_Checked"/>
                    <RadioButton x:Name="rbTerminal" Content="Terminal" 
                                 Style="{StaticResource PanelTabRadioStyle}"
                                 IsEnabled="False"/>
                </StackPanel>
                
                <!-- Toggle Button -->
                <Button Grid.Column="1"
                       x:Name="btnToggle"
                       Style="{StaticResource PanelToggleButtonStyle}"
                       Click="BtnToggle_Click"
                       ToolTip="Toggle Panel">
                    <TextBlock Text="&#xE70D;" 
                              FontFamily="Segoe MDL2 Assets"
                              FontSize="12"
                              Foreground="{StaticResource VSCodeForeground}"/>
                </Button>
            </Grid>
        </Border>
        
        <!-- Panel Content -->
        <Grid Grid.Row="1" Background="{StaticResource VSCodePanelBackground}">
            <!-- Event Log Content -->
            <eventLog:EventLogTabControl x:Name="eventLogContent" 
                                         DataContext="{Binding CurrentLog}"
                                         Visibility="Visible"/>
            
            <!-- Output Content -->
            <DockPanel x:Name="outputContent" Visibility="Collapsed" DataContext="{Binding Output}">
                <!-- 툴바 -->
                <Grid DockPanel.Dock="Top" Margin="4,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 좌측 버튼들 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Content="Clear" Click="BtnOutputClear_Click" Padding="8,2" Margin="0,0,4,0"
                                ToolTip="Clear output log"/>
                        <Button Content="Copy" Click="BtnOutputCopy_Click" Padding="8,2" Margin="0,0,4,0"
                                ToolTip="Copy to clipboard"/>
                        <CheckBox x:Name="chkAutoScroll" Content="Auto-scroll" IsChecked="True" 
                                  VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                    
                    <!-- 우측 저장 설정 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Lines:" VerticalAlignment="Center" Margin="0,0,4,0" FontSize="11"/>
                        <TextBox x:Name="txtOutputMaxLines" Width="60" Height="20" FontSize="11" 
                                 VerticalContentAlignment="Center" Padding="2,0"/>
                        <CheckBox x:Name="chkOutputSave" Content="Save" Margin="8,0,0,0" VerticalAlignment="Center" FontSize="11"/>
                    </StackPanel>
                </Grid>
                
                <!-- 로그 리스트 -->
                <ListView x:Name="lvOutput" 
                          Background="{StaticResource VSCodeEditorBackground}"
                          Foreground="{StaticResource VSCodeForeground}"
                          BorderThickness="0"
                          FontFamily="Consolas"
                          FontSize="11"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FormattedLine}" 
                                       Foreground="{Binding IsError, Converter={StaticResource ErrorToBrushConverter}}"
                                       TextWrapping="NoWrap"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="2,0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </DockPanel>
            
            <!-- Terminal Content (Coming soon) -->
            <TextBlock x:Name="terminalContent" 
                       Text="Terminal (Coming soon)" 
                       Foreground="{StaticResource VSCodeSecondaryForeground}"
                       Margin="12"
                       Visibility="Collapsed"/>
        </Grid>
    </Grid>
</UserControl>

