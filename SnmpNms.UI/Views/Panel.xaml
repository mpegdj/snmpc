<UserControl x:Class="SnmpNms.UI.Views.BottomPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:eventLog="clr-namespace:SnmpNms.UI.Views.EventLog"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="800"
             MinHeight="120"
             Background="{StaticResource VSCodePanelBackground}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Panel Header with Tab Headers -->
        <Border Grid.Row="0" 
                Style="{StaticResource PanelHeaderStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Tab Headers -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <RadioButton x:Name="rbLog" Content="Log" 
                                 Style="{StaticResource PanelTabRadioStyle}"
                                 IsChecked="True" Checked="TabRadio_Checked"/>
                    <RadioButton x:Name="rbDebug" Content="Debug" 
                                 Style="{StaticResource PanelTabRadioStyle}"
                                 Checked="TabRadio_Checked"/>
                    <RadioButton x:Name="rbCom" Content="Com" 
                                 Style="{StaticResource PanelTabRadioStyle}"
                                 Checked="TabRadio_Checked"/>
                </StackPanel>
                
                <!-- Toggle Button -->
                <Button Grid.Column="1"
                       x:Name="btnToggle"
                       Style="{StaticResource PanelToggleButtonStyle}"
                       Click="BtnToggle_Click"
                       ToolTip="Toggle Panel">
                    <TextBlock Text="&#xE70D;" 
                              FontFamily="Segoe MDL2 Assets"
                              FontSize="12"
                              Foreground="{StaticResource VSCodeForeground}"/>
                </Button>
            </Grid>
        </Border>
        
        <!-- Panel Content -->
        <Grid Grid.Row="1" Background="{StaticResource VSCodePanelBackground}">
            <!-- Log Content (trap과 polling만) -->
            <DockPanel x:Name="logContent" Visibility="Visible" DataContext="{Binding Log}">
                <!-- 툴바 -->
                <Grid DockPanel.Dock="Top" Margin="4,2">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Clear" Click="BtnLogClear_Click" Padding="8,2" Margin="0,0,4,0"
                                ToolTip="Clear log"/>
                        <Button Content="Copy" Click="BtnLogCopy_Click" Padding="8,2" Margin="0,0,4,0"
                                ToolTip="Copy to clipboard"/>
                        <CheckBox x:Name="chkLogAutoScroll" Content="Auto-scroll" IsChecked="True" 
                                  VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                </Grid>
                
                <!-- 로그 리스트 -->
                <DataGrid x:Name="dgLog" 
                          ItemsSource="{Binding LogEntries}"
                          AutoGenerateColumns="False"
                          Background="{StaticResource VSCodeEditorBackground}"
                          Foreground="{StaticResource VSCodeForeground}"
                          BorderThickness="0"
                          FontFamily="Consolas"
                          FontSize="11"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowBackground="Transparent"
                          AlternatingRowBackground="Transparent"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserResizeRows="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat='HH:mm:ss.fff'}" Width="100"/>
                        <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="70"/>
                        <DataGridTextColumn Header="Device" Binding="{Binding Device}" Width="120"/>
                        <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
            
            <!-- Debug Content (앱 동작 및 명령어 실행) -->
            <DockPanel x:Name="debugContent" Visibility="Collapsed" DataContext="{Binding Debug}">
                <!-- 툴바 -->
                <Grid DockPanel.Dock="Top" Margin="4,2">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Clear" Click="BtnDebugClear_Click" Padding="8,2" Margin="0,0,4,0"
                                ToolTip="Clear debug log"/>
                        <Button Content="Copy" Click="BtnDebugCopy_Click" Padding="8,2" Margin="0,0,4,0"
                                ToolTip="Copy to clipboard"/>
                        <CheckBox x:Name="chkDebugAutoScroll" Content="Auto-scroll" IsChecked="True" 
                                  VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                </Grid>
                
                <!-- 로그 리스트 -->
                <ListView x:Name="lvDebug" 
                          ItemsSource="{Binding DebugLogs}"
                          Background="{StaticResource VSCodeEditorBackground}"
                          Foreground="{StaticResource VSCodeForeground}"
                          BorderThickness="0"
                          FontFamily="Consolas"
                          FontSize="11"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FormattedLine}" 
                                       Foreground="{Binding IsError, Converter={StaticResource ErrorToBrushConverter}}"
                                       TextWrapping="NoWrap"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="2,0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </DockPanel>
            
            <!-- Com Content (통신 hex와 text) -->
            <DockPanel x:Name="comContent" Visibility="Collapsed" DataContext="{Binding Com}">
                <!-- 툴바 -->
                <Grid DockPanel.Dock="Top" Margin="4,2">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Clear" Click="BtnComClear_Click" Padding="8,2" Margin="0,0,4,0"
                                ToolTip="Clear com log"/>
                        <Button Content="Copy" Click="BtnComCopy_Click" Padding="8,2" Margin="0,0,4,0"
                                ToolTip="Copy to clipboard"/>
                        <CheckBox x:Name="chkComAutoScroll" Content="Auto-scroll" IsChecked="True" 
                                  VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                </Grid>
                
                <!-- 로그 리스트 (Wireshark 스타일: 한 줄씩 표시) -->
                <ListView x:Name="lvCom" 
                          ItemsSource="{Binding ComLogs}"
                          Background="White"
                          Foreground="Black"
                          BorderThickness="0"
                          FontFamily="Consolas"
                          FontSize="11"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Time" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TimestampString, Mode=OneWay}" Foreground="#444444"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Dir" Width="40" DisplayMemberBinding="{Binding Direction}"/>
                            <GridViewColumn Header="Target" Width="120" DisplayMemberBinding="{Binding Target}"/>
                            <GridViewColumn Header="Data (Hex/Text Summary)" Width="600">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Summary}" Foreground="Black"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="2,4"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>

