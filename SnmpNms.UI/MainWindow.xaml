<Window x:Class="SnmpNms.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mapView="clr-namespace:SnmpNms.UI.Views.MapView"
        xmlns:eventLog="clr-namespace:SnmpNms.UI.Views.EventLog"
        xmlns:conv="clr-namespace:SnmpNms.UI.Converters"
        xmlns:models="clr-namespace:SnmpNms.UI.Models"
        xmlns:local="clr-namespace:SnmpNms.UI"
        xmlns:dialogs="clr-namespace:SnmpNms.UI.Views.Dialogs"
        Title="SnmpNms" Height="800" Width="1200"
        MinHeight="650" MinWidth="980">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:MainWindowCommands.MapProperties}" Executed="CmdMapProperties_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindowCommands.MapOpen}" Executed="CmdMapOpen_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindowCommands.MapQuickPoll}" Executed="CmdMapQuickPoll_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindowCommands.MapMibTable}" Executed="CmdMapMibTable_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindowCommands.MapDelete}" Executed="CmdMapDelete_Executed"/>
    </Window.CommandBindings>
    <DockPanel>
        <DockPanel.Resources>
            <!-- Simple icon button style using Segoe MDL2 Assets (built-in on Windows) -->
            <Style x:Key="IconButton" TargetType="Button">
                <Setter Property="Width" Value="30"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Margin" Value="2"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="#CFCFCF"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>
            <Style x:Key="IconGlyph" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>

            <conv:DeviceStatusToBrushConverter x:Key="DeviceStatusToBrushConverter"/>
        </DockPanel.Resources>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Click="MenuExit_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Refresh" Click="MenuRefresh_Click"/>
            </MenuItem>
            <MenuItem Header="_Window">
                <MenuItem Header="Cascade" Click="MenuWindowsCascade_Click"/>
                <MenuItem Header="Tile (Todo)" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="_Config">
                <MenuItem Header="MIB Database..." Click="MenuConfigMibDatabase_Click"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="SNMP Test" Click="MenuSnmpTest_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About" Click="MenuAbout_Click"/>
            </MenuItem>
        </Menu>

        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Style="{StaticResource IconButton}" ToolTip="Find Map Objects" Click="FindMapObjects_Click">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE721;"/>
                </Button>
                <Button Style="{StaticResource IconButton}" ToolTip="Edit Object Properties" Click="EditObjectProperties_Click">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE71C;"/>
                </Button>
                <Button Style="{StaticResource IconButton}" ToolTip="Remove Device" Click="RemoveDevice_Click">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE74D;"/>
                </Button>
                <Separator/>
                <Button Style="{StaticResource IconButton}" ToolTip="Start Poll" Click="StartPoll_Click">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE768;"/>
                </Button>
                <Button Style="{StaticResource IconButton}" ToolTip="Stop Poll" Click="StopPoll_Click">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE71A;"/>
                </Button>
                <Separator/>
                <Button Style="{StaticResource IconButton}" ToolTip="Clear Log" Click="ClearLog_Click">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE74D;"/>
                </Button>
            </ToolBar>
            <ToolBar>
                <Button Style="{StaticResource IconButton}" ToolTip="Map View Back (Todo)" IsEnabled="False">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE72B;"/>
                </Button>
                <Button Style="{StaticResource IconButton}" ToolTip="Map View Forward (Todo)" IsEnabled="False">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE72A;"/>
                </Button>
                <Button Style="{StaticResource IconButton}" ToolTip="Map View Parent (Todo)" IsEnabled="False">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE74A;"/>
                </Button>
                <Button Style="{StaticResource IconButton}" ToolTip="Root Subnet Map View (Todo)" IsEnabled="False">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE80F;"/>
                </Button>
                <Separator/>
                <TextBlock Text="Map:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox Width="180" IsEnabled="False"/>
                <Separator/>
                <TextBlock Text="MIB:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox Width="220" IsEnabled="False"/>
            </ToolBar>
        </ToolBarTray>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Status: " FontWeight="Bold"/>
                    <Label Name="lblStatus" Content="Unknown" Foreground="Gray" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding SelectedDevice.DisplayName, FallbackValue='(no device selected)'}"/>
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="220" MinHeight="120"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Selection Tool (SNMPc style) -->
            <GroupBox Grid.Row="0" Grid.Column="0" Header="Selection Tool" Margin="8">
                <TabControl>
                    <TabItem Header="Map">
                        <DockPanel Margin="8">
                            <TreeView Name="tvDevices"
                                      ItemsSource="{Binding MapRoots}"
                                      AllowDrop="True"
                                      PreviewMouseLeftButtonDown="TvDevices_PreviewMouseLeftButtonDown"
                                      PreviewMouseMove="TvDevices_PreviewMouseMove"
                                      Drop="TvDevices_Drop"
                                      PreviewKeyDown="TvDevices_PreviewKeyDown">
                                <TreeView.Resources>
                                    <HierarchicalDataTemplate DataType="{x:Type models:MapNode}" ItemsSource="{Binding Children}">
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle Width="10" Height="10" Margin="0,0,6,0"
                                                       Fill="{Binding EffectiveStatus, Converter={StaticResource DeviceStatusToBrushConverter}}"/>
                                            <TextBlock Text="{Binding DisplayName}"
                                                       MouseLeftButtonDown="MapNodeText_MouseLeftButtonDown"/>
                                        </StackPanel>
                                    </HierarchicalDataTemplate>
                                </TreeView.Resources>
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem">
                                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=OneWay}"/>
                                        <Setter Property="ContextMenu">
                                            <Setter.Value>
                                                <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                                    <MenuItem Header="Properties (Todo)"
                                                              Command="{x:Static local:MainWindowCommands.MapProperties}"
                                                              CommandParameter="{Binding}"/>
                                                    <MenuItem Header="Open Map View"
                                                              Command="{x:Static local:MainWindowCommands.MapOpen}"
                                                              CommandParameter="{Binding}"/>
                                                    <Separator/>
                                                    <MenuItem Header="Quick Poll (Todo)"
                                                              Command="{x:Static local:MainWindowCommands.MapQuickPoll}"
                                                              CommandParameter="{Binding}"/>
                                                    <MenuItem Header="MIB Table (Todo)"
                                                              Command="{x:Static local:MainWindowCommands.MapMibTable}"
                                                              CommandParameter="{Binding}"/>
                                                    <Separator/>
                                                    <MenuItem Header="Delete"
                                                              Command="{x:Static local:MainWindowCommands.MapDelete}"
                                                              CommandParameter="{Binding}"/>
                                                </ContextMenu>
                                            </Setter.Value>
                                        </Setter>
                                        <!-- Expander 클릭 영역 확대 (사각형 영역, 삼각형 아이콘) -->
                                        <Style.Resources>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Width" Value="20"/>
                                                <Setter Property="Height" Value="20"/>
                                                <Setter Property="Margin" Value="0"/>
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Border x:Name="border" 
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderThickness="0"
                                                                    Width="20" Height="20"
                                                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                <ContentPresenter x:Name="contentPresenter"
                                                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <!-- 기본 상태: 투명 배경 -->
                                                                <Trigger Property="IsMouseOver" Value="False">
                                                                    <Setter TargetName="border" Property="Background" Value="Transparent"/>
                                                                </Trigger>
                                                                <!-- 호버 시 배경색 파란색으로 변경 -->
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#0078D4"/>
                                                                </Trigger>
                                                                <!-- 접혔을 때: Fill을 검정색으로 강제 (기본이 하얀색이므로) -->
                                                                <Trigger Property="IsChecked" Value="False">
                                                                    <Setter Property="Foreground" Value="Black"/>
                                                                </Trigger>
                                                                <!-- 펴졌을 때: Fill을 검정색으로 강제 -->
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter Property="Foreground" Value="Black"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <!-- 기본 상태: 투명 배경 -->
                                                    <Trigger Property="IsMouseOver" Value="False">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                    </Trigger>
                                                    <!-- 호버 시 배경색 파란색으로 변경 -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#0078D4"/>
                                                    </Trigger>
                                                    <!-- 접혔을 때와 펴졌을 때 모두 Foreground를 검정색으로 강제 -->
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter Property="Foreground" Value="Black"/>
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter Property="Foreground" Value="Black"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Style.Resources>
                                    </Style>
                                </TreeView.ItemContainerStyle>
                            </TreeView>
                        </DockPanel>
                    </TabItem>
                    <TabItem Header="Mib" Name="tabMib">
                        <DockPanel Margin="12">
                            <!-- MIB Tree View -->
                            <TreeView Name="treeMib" DockPanel.Dock="Left" Width="300" Margin="0,0,8,0" SelectedItemChanged="treeMib_SelectedItemChanged">
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem">
                                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                    </Style>
                                </TreeView.ItemContainerStyle>
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" Margin="4,2"/>
                                            <TextBlock Text=" (" Foreground="Gray" Margin="2,2,0,2"/>
                                            <TextBlock Text="{Binding Oid}" Foreground="Gray" FontSize="10"/>
                                            <TextBlock Text=")" Foreground="Gray" Margin="0,2,2,2"/>
                                        </StackPanel>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                                <TreeView.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Get" Click="MibTreeGet_Click"/>
                                        <MenuItem Header="Get Next" Click="MibTreeGetNext_Click"/>
                                        <MenuItem Header="Walk" Click="MibTreeWalk_Click"/>
                                        <Separator/>
                                        <MenuItem Header="View Table" Click="MibTreeViewTable_Click"/>
                                        <Separator/>
                                        <MenuItem Header="Copy OID" Click="MibTreeCopyOid_Click"/>
                                        <MenuItem Header="Copy Name" Click="MibTreeCopyName_Click"/>
                                    </ContextMenu>
                                </TreeView.ContextMenu>
                            </TreeView>
                            
                            <!-- MIB Details Panel -->
                            <Border DockPanel.Dock="Right" Width="400" BorderBrush="#DDD" BorderThickness="1" Padding="12" Background="#FAFAFA">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel>
                                        <TextBlock Text="MIB Details" FontWeight="Bold" FontSize="14" Margin="0,0,0,12"/>
                                        
                                        <TextBlock Text="Name:" FontWeight="SemiBold" Margin="0,4"/>
                                        <TextBlock Name="txtMibName" Text="-" Margin="0,0,0,12"/>
                                        
                                        <TextBlock Text="OID:" FontWeight="SemiBold" Margin="0,4"/>
                                        <TextBlock Name="txtMibOid" Text="-" Margin="0,0,0,12"/>
                                        
                                        <TextBlock Text="Type:" FontWeight="SemiBold" Margin="0,4"/>
                                        <TextBlock Name="txtMibType" Text="-" Margin="0,0,0,12"/>
                                        
                                        <TextBlock Text="Description:" FontWeight="SemiBold" Margin="0,4"/>
                                        <TextBlock Name="txtMibDescription" Text="-" TextWrapping="Wrap" Margin="0,0,0,12"/>
                                        
                                        <Separator Margin="0,12"/>
                                        
                                        <Button Content="Get Value" Click="BtnMibGet_Click" Margin="0,4" Padding="8,4"/>
                                        <Button Content="Get Next" Click="BtnMibGetNext_Click" Margin="0,4" Padding="8,4"/>
                                        <Button Content="Walk" Click="BtnMibWalk_Click" Margin="0,4" Padding="8,4"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </Border>
                        </DockPanel>
                    </TabItem>
                    <TabItem Header="Trend">
                        <Grid Margin="12">
                            <TextBlock TextWrapping="Wrap"
                                       Text="Report profiles / long-term polling / scheduled reports (Todo)"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Event">
                        <Grid Margin="12">
                            <TextBlock TextWrapping="Wrap"
                                       Text="Event filters / actions when an event is received (Todo)"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Menu">
                        <Grid Margin="12">
                            <TextBlock TextWrapping="Wrap"
                                       Text="Custom menus that appear in Manage/Tools/Help menus (Todo)"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </GroupBox>

            <GridSplitter Grid.Row="0" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <!-- Center: View Window Area (SNMPc style) -->
            <Grid Grid.Row="0" Grid.Column="2" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="48"/>
                </Grid.ColumnDefinitions>

                <!-- View Window (we keep our existing tabs as one main view) -->
                <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top"
                                   Text="View Window Area"
                                   Padding="10,6"
                                   FontWeight="Bold"
                                   Background="#F7F7F7"/>
                        <TabControl Name="tabMain" Margin="0" SelectionChanged="TabMain_SelectionChanged">
                            <TabItem Header="Dashboard">
                                <Grid Margin="12">
                                    <TextBlock FontSize="18" FontWeight="Bold" Text="Dashboard (Coming soon)"/>
                                </Grid>
                            </TabItem>

                            <TabItem Header="Map View">
                                <mapView:MapViewControl x:Name="mapViewControl"/>
                            </TabItem>

                            <TabItem Header="Device">
                                <DockPanel Margin="12">
                                    <TextBlock DockPanel.Dock="Top" Foreground="#666" Margin="0,0,0,8"
                                               Text="Map DB에 등록된 디바이스를 엑셀처럼 표로 표시합니다. (선택=현재 선택 장비)"/>

                                    <DataGrid ItemsSource="{Binding DeviceNodes}"
                                              SelectedItem="{Binding SelectedDeviceNode, Mode=TwoWay}"
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              CanUserReorderColumns="True"
                                              CanUserResizeColumns="True"
                                              CanUserSortColumns="True"
                                              ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                              ScrollViewer.VerticalScrollBarVisibility="Visible"
                                              GridLinesVisibility="All"
                                              HeadersVisibility="Column"
                                              SelectionMode="Single"
                                              SelectionUnit="FullRow">
                                        <DataGrid.Columns>
                                            <DataGridTemplateColumn Header="●" Width="28" IsReadOnly="True">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Rectangle Width="10" Height="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                   Fill="{Binding EffectiveStatus, Converter={StaticResource DeviceStatusToBrushConverter}}"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTextColumn Header="IP" Binding="{Binding Target.IpAddress}" Width="120"/>
                                            <DataGridTextColumn Header="Alias" Binding="{Binding Target.Alias}" Width="110"/>
                                            <DataGridTextColumn Header="Device" Binding="{Binding Target.Device}" Width="110"/>
                                            <DataGridTextColumn Header="Port" Binding="{Binding Target.Port}" Width="60"/>
                                            <DataGridTextColumn Header="Subnet" Binding="{Binding Parent.Name}" Width="120"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding Target.Status}" Width="90"/>
                                            <DataGridTextColumn Header="Version" Binding="{Binding Target.Version}" Width="90"/>
                                            <DataGridTextColumn Header="Community" Binding="{Binding Target.Community}" Width="110"/>
                                            <DataGridTextColumn Header="Timeout(ms)" Binding="{Binding Target.Timeout}" Width="90"/>
                                            <DataGridTextColumn Header="Retries" Binding="{Binding Target.Retries}" Width="70"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>

                            <TabItem Header="Alarms">
                                <Grid Margin="12">
                                    <TextBlock FontSize="18" FontWeight="Bold" Text="Alarm Console (Coming soon)"/>
                                </Grid>
                            </TabItem>

                            <TabItem Header="Performance">
                                <Grid Margin="12">
                                    <TextBlock FontSize="18" FontWeight="Bold" Text="Performance (Coming soon)"/>
                                </Grid>
                            </TabItem>

                            <TabItem Header="MIB Table" Name="tabMibTable">
                                <DockPanel Margin="12">
                                    <!-- 상단: MIB 테이블 선택 및 디바이스 정보 -->
                                    <Border DockPanel.Dock="Top" BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="0,0,0,8" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="MIB Table:" VerticalAlignment="Center" Margin="0,0,8,4"/>
                                            <TextBox Grid.Row="0" Grid.Column="1" Name="txtMibTableOid" IsReadOnly="True" Margin="0,0,8,4"/>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Device:" VerticalAlignment="Center" Margin="0,0,8,4"/>
                                            <TextBlock Grid.Row="0" Grid.Column="3" Name="txtMibTableDevice" Text="-" VerticalAlignment="Center" Margin="0,0,8,4"/>
                                            
                                            <Button Grid.Row="0" Grid.Column="4" Content="Refresh" Click="BtnMibTableRefresh_Click" Padding="8,4" Margin="0,0,0,4"/>
                                            
                                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Name="txtMibTableStatus" Text="Select a MIB table from the MIB tree and a device to view table data." Foreground="#666" FontSize="11"/>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- MIB 테이블 데이터 -->
                                    <DataGrid Name="dataGridMibTable" 
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              CanUserReorderColumns="True"
                                              CanUserResizeColumns="True"
                                              CanUserSortColumns="True"
                                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              GridLinesVisibility="All"
                                              AlternatingRowBackground="#F8F8F8"
                                              HeadersVisibility="Column"
                                              SelectionMode="Single"
                                              SelectionUnit="FullRow"
                                              Background="#FFFFFF"
                                              BorderBrush="#E0E0E0"
                                              BorderThickness="1">
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>

                            <TabItem Header="MIB Graph">
                                <Grid Margin="12">
                                    <TextBlock FontSize="18" FontWeight="Bold" Text="MIB Graph (Todo)"/>
                                </Grid>
                            </TabItem>

                            <TabItem Header="SNMP Test">
                                <Grid Margin="12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Row="0" Grid.Column="0" Content="IP Address:"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Name="txtIp" Text="127.0.0.1" Margin="2"/>

                                    <Label Grid.Row="1" Grid.Column="0" Content="Community:"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Name="txtCommunity" Text="public" Margin="2"/>

                                    <Label Grid.Row="2" Grid.Column="0" Content="OID/Name:"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Name="txtOid" Text="1.3.6.1.2.1.1.1.0" Margin="2"/>

                                    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="2">
                                        <CheckBox Name="chkAutoPoll" Content="Auto Poll (3s)" VerticalAlignment="Center" Margin="0,0,10,0"
                                                  Checked="ChkAutoPoll_Checked" Unchecked="ChkAutoPoll_Unchecked"/>
                                        <Button Name="btnGet" Content="Get" Click="BtnGet_Click" Width="100"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="2,10,2,0" TextWrapping="Wrap"
                                               Text="결과/로그는 하단 Event Log 창에 출력됩니다."/>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </DockPanel>
                </Border>

                <!-- Right: Edit Button Bar (placeholder) -->
                <Border Grid.Column="1" Margin="8,0,0,0" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top"
                                   Text="Edit"
                                   Padding="6"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Background="#F7F7F7"/>
                        <StackPanel Margin="6" HorizontalAlignment="Center">
                            <Button Style="{StaticResource IconButton}" ToolTip="Add Device Object" Click="EditAddDeviceObject_Click">
                                <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE710;"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}" ToolTip="Add Subnet" Click="EditAddSubnet_Click">
                                <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE8D2;"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}" ToolTip="Add Goto" Click="EditAddGoto_Click">
                                <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE8A7;"/>
                            </Button>
                            <Separator/>
                            <Button Style="{StaticResource IconButton}" ToolTip="Add Geo Subnet (Todo)">
                                <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE81D;"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}" ToolTip="Add Link Between Objects (Todo)">
                                <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE71B;"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}" ToolTip="Add Network Object (Todo)">
                                <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE8D4;"/>
                            </Button>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </Grid>

            <!-- Splitter between View Window Area and Event Log Tool -->
            <GridSplitter Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                          Height="5"
                          HorizontalAlignment="Stretch"
