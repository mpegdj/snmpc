<Window x:Class="SnmpNms.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mapView="clr-namespace:SnmpNms.UI.Views.MapView"
        xmlns:eventLog="clr-namespace:SnmpNms.UI.Views.EventLog"
        xmlns:conv="clr-namespace:SnmpNms.UI.Converters"
        xmlns:models="clr-namespace:SnmpNms.UI.Models"
        xmlns:local="clr-namespace:SnmpNms.UI"
        xmlns:dialogs="clr-namespace:SnmpNms.UI.Views.Dialogs"
        xmlns:views="clr-namespace:SnmpNms.UI.Views"
        Title="SnmpNms" Height="800" Width="1200"
        MinHeight="650" MinWidth="980">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:MainWindowCommands.MapProperties}" Executed="CmdMapProperties_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindowCommands.MapOpen}" Executed="CmdMapOpen_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindowCommands.MapQuickPoll}" Executed="CmdMapQuickPoll_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindowCommands.MapMibTable}" Executed="CmdMapMibTable_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindowCommands.MapDelete}" Executed="CmdMapDelete_Executed"/>
    </Window.CommandBindings>
    <DockPanel>
        <DockPanel.Resources>
            <!-- Simple icon button style using Segoe MDL2 Assets (built-in on Windows) -->
            <Style x:Key="IconButton" TargetType="Button">
                <Setter Property="Width" Value="30"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Margin" Value="2"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="#CFCFCF"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>
            <Style x:Key="IconGlyph" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>

            <conv:DeviceStatusToBrushConverter x:Key="DeviceStatusToBrushConverter"/>
        </DockPanel.Resources>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Click="MenuExit_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Refresh" Click="MenuRefresh_Click"/>
            </MenuItem>
            <MenuItem Header="_Window">
                <MenuItem Header="Cascade" Click="MenuWindowsCascade_Click"/>
                <MenuItem Header="Tile (Todo)" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="_Config">
                <MenuItem Header="MIB Database..." Click="MenuConfigMibDatabase_Click"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="SNMP Test" Click="MenuSnmpTest_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About" Click="MenuAbout_Click"/>
            </MenuItem>
        </Menu>

        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Style="{StaticResource IconButton}" ToolTip="Find Map Objects" Click="FindMapObjects_Click">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE721;"/>
                </Button>
                <Button Style="{StaticResource IconButton}" ToolTip="Edit Object Properties" Click="EditObjectProperties_Click">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE71C;"/>
                </Button>
                <Button Style="{StaticResource IconButton}" ToolTip="Remove Device" Click="RemoveDevice_Click">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE74D;"/>
                </Button>
                <Separator/>
                <Button Style="{StaticResource IconButton}" ToolTip="Start Poll" Click="StartPoll_Click">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE768;"/>
                </Button>
                <Button Style="{StaticResource IconButton}" ToolTip="Stop Poll" Click="StopPoll_Click">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE71A;"/>
                </Button>
                <Separator/>
                <Button Style="{StaticResource IconButton}" ToolTip="Clear Log" Click="ClearLog_Click">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE74D;"/>
                </Button>
            </ToolBar>
            <ToolBar>
                <Button Style="{StaticResource IconButton}" ToolTip="Map View Back (Todo)" IsEnabled="False">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE72B;"/>
                </Button>
                <Button Style="{StaticResource IconButton}" ToolTip="Map View Forward (Todo)" IsEnabled="False">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE72A;"/>
                </Button>
                <Button Style="{StaticResource IconButton}" ToolTip="Map View Parent (Todo)" IsEnabled="False">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE74A;"/>
                </Button>
                <Button Style="{StaticResource IconButton}" ToolTip="Root Subnet Map View (Todo)" IsEnabled="False">
                    <TextBlock Style="{StaticResource IconGlyph}" Text="&#xE80F;"/>
                </Button>
                <Separator/>
                <TextBlock Text="Map:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox Width="180" IsEnabled="False"/>
                <Separator/>
                <TextBlock Text="MIB:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox Width="220" IsEnabled="False"/>
            </ToolBar>
        </ToolBarTray>

        <!-- 하단: Log View -->
        <views:BottomPanel DockPanel.Dock="Bottom" Height="220" MinHeight="120"
                           x:Name="bottomPanel"/>

        <!-- 중앙: Sidebar + Editor -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar (Activity Bar 포함) -->
            <views:Sidebar Grid.Column="0"
                           x:Name="sidebar"
                           HeaderText="EXPLORER"/>

            <!-- Splitter -->
            <GridSplitter Grid.Column="2"
                         Width="1"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Background="{StaticResource VSCodeDivider}"/>

            <!-- Editor Area -->
            <TabControl Grid.Column="3" Name="tabMain" SelectionChanged="TabMain_SelectionChanged">
                            <TabItem Header="Event Log">
                                <eventLog:EventLogTabControl DataContext="{Binding CurrentLog}"/>
                            </TabItem>
                            
                            <TabItem Header="Dashboard">
                                <Grid Margin="12">
                                    <TextBlock FontSize="18" FontWeight="Bold" Text="Dashboard (Coming soon)"/>
                                </Grid>
                            </TabItem>

                            <TabItem Header="Map View">
                                <mapView:MapViewControl x:Name="mapViewControl" DataContext="{Binding}"/>
                            </TabItem>

                            <TabItem Header="Device">
                                <DockPanel Margin="12">
                                    <TextBlock DockPanel.Dock="Top" Foreground="#666" Margin="0,0,0,8"
                                               Text="Map DB에 등록된 디바이스를 엑셀처럼 표로 표시합니다. (선택=현재 선택 장비)"/>

                                    <DataGrid ItemsSource="{Binding DeviceNodes}"
                                              SelectedItem="{Binding SelectedDeviceNode, Mode=TwoWay}"
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              CanUserReorderColumns="True"
                                              CanUserResizeColumns="True"
                                              CanUserSortColumns="True"
                                              ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                              ScrollViewer.VerticalScrollBarVisibility="Visible"
                                              GridLinesVisibility="All"
                                              HeadersVisibility="Column"
                                              SelectionMode="Single"
                                              SelectionUnit="FullRow">
                                        <DataGrid.Columns>
                                            <DataGridTemplateColumn Header="●" Width="28" IsReadOnly="True">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Rectangle Width="10" Height="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                   Fill="{Binding EffectiveStatus, Converter={StaticResource DeviceStatusToBrushConverter}}"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTextColumn Header="IP" Binding="{Binding Target.IpAddress}" Width="120"/>
                                            <DataGridTextColumn Header="Alias" Binding="{Binding Target.Alias}" Width="110"/>
                                            <DataGridTextColumn Header="Device" Binding="{Binding Target.Device}" Width="110"/>
                                            <DataGridTextColumn Header="Port" Binding="{Binding Target.Port}" Width="60"/>
                                            <DataGridTextColumn Header="Subnet" Binding="{Binding Parent.Name}" Width="120"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding Target.Status}" Width="90"/>
                                            <DataGridTextColumn Header="Version" Binding="{Binding Target.Version}" Width="90"/>
                                            <DataGridTextColumn Header="Community" Binding="{Binding Target.Community}" Width="110"/>
                                            <DataGridTextColumn Header="Timeout(ms)" Binding="{Binding Target.Timeout}" Width="90"/>
                                            <DataGridTextColumn Header="Retries" Binding="{Binding Target.Retries}" Width="70"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>

                            <TabItem Header="Alarms">
                                <Grid Margin="12">
                                    <TextBlock FontSize="18" FontWeight="Bold" Text="Alarm Console (Coming soon)"/>
                                </Grid>
                            </TabItem>

                            <TabItem Header="Performance">
                                <Grid Margin="12">
                                    <TextBlock FontSize="18" FontWeight="Bold" Text="Performance (Coming soon)"/>
                                </Grid>
                            </TabItem>

                            <TabItem Header="MIB Table" Name="tabMibTable">
                                <DockPanel Margin="12">
                                    <!-- 상단: MIB 테이블 선택 및 디바이스 정보 -->
                                    <Border DockPanel.Dock="Top" BorderBrush="{StaticResource VSCodeDivider}" BorderThickness="0,0,0,1" Padding="0,0,0,8" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="MIB Table:" VerticalAlignment="Center" Margin="0,0,8,4"/>
                                            <TextBox Grid.Row="0" Grid.Column="1" Name="txtMibTableOid" IsReadOnly="True" Margin="0,0,8,4"/>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Device:" VerticalAlignment="Center" Margin="0,0,8,4"/>
                                            <TextBlock Grid.Row="0" Grid.Column="3" Name="txtMibTableDevice" Text="-" VerticalAlignment="Center" Margin="0,0,8,4"/>
                                            
                                            <Button Grid.Row="0" Grid.Column="4" Content="Refresh" Click="BtnMibTableRefresh_Click" Padding="8,4" Margin="0,0,0,4"/>
                                            
                                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Name="txtMibTableStatus" Text="Select a MIB table from the MIB tree and a device to view table data." Foreground="#666" FontSize="11"/>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- MIB 테이블 데이터 -->
                                    <DataGrid Name="dataGridMibTable" 
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              CanUserReorderColumns="True"
                                              CanUserResizeColumns="True"
                                              CanUserSortColumns="True"
                                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              GridLinesVisibility="All"
                                              AlternatingRowBackground="#F8F8F8"
                                              HeadersVisibility="Column"
                                              SelectionMode="Single"
                                              SelectionUnit="FullRow"
                                              Background="#FFFFFF"
                                              BorderBrush="{StaticResource VSCodeDivider}"
                                              BorderThickness="1">
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>

                            <TabItem Header="MIB Graph">
                                <Grid Margin="12">
                                    <TextBlock FontSize="18" FontWeight="Bold" Text="MIB Graph (Todo)"/>
                                </Grid>
                            </TabItem>

                            <TabItem Header="SNMP Test">
                                <Grid Margin="12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Row="0" Grid.Column="0" Content="IP Address:"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Name="txtIp" Text="127.0.0.1" Margin="2"/>

                                    <Label Grid.Row="1" Grid.Column="0" Content="Community:"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Name="txtCommunity" Text="public" Margin="2"/>

                                    <Label Grid.Row="2" Grid.Column="0" Content="OID/Name:"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Name="txtOid" Text="1.3.6.1.2.1.1.1.0" Margin="2"/>

                                    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="2">
                                        <CheckBox Name="chkAutoPoll" Content="Auto Poll (3s)" VerticalAlignment="Center" Margin="0,0,10,0"
                                                  Checked="ChkAutoPoll_Checked" Unchecked="ChkAutoPoll_Unchecked"/>
                                        <Button Name="btnGet" Content="Get" Click="BtnGet_Click" Width="100"/>
                                    </StackPanel>

                                    <Separator Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,10"/>

                                    <Label Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Content="Trap Test" FontWeight="Bold" Margin="2,5,2,5"/>
                                    
                                    <Label Grid.Row="6" Grid.Column="0" Content="Trap Target:"/>
                                    <Grid Grid.Row="6" Grid.Column="1" Margin="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Name="txtTrapTarget" Text="127.0.0.1" Margin="0,0,5,0"/>
                                        <TextBox Grid.Column="1" Name="txtTrapPort" Text="162" Margin="0,0,5,0"/>
                                    </Grid>

                                    <Label Grid.Row="7" Grid.Column="0" Content="Trap OID:"/>
                                    <Grid Grid.Row="7" Grid.Column="1" Margin="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Name="txtTrapOid" Text="1.3.6.1.4.1.1.1.1.1" Margin="0,0,5,0"/>
                                        <Button Grid.Column="1" Name="btnSendTrap" Content="Send Trap" Click="BtnSendTrap_Click"/>
                                    </Grid>

                                    <TextBlock Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Margin="2,10,2,0" TextWrapping="Wrap"
                                               Text="결과/로그는 하단 Event Log 창에 출력됩니다. Trap은 TrapListener가 수신합니다."/>
                                </Grid>
                            </TabItem>
                        </TabControl>
        </Grid>
    </DockPanel>
</Window>