<Window x:Class="SnmpNms.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple SNMP Manager" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="IP Address:"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="txtIp" Text="127.0.0.1" Margin="2"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Community:"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="txtCommunity" Text="public" Margin="2"/>

        <Label Grid.Row="2" Grid.Column="0" Content="OID:"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="txtOid" Text="1.3.6.1.2.1.1.1.0" Margin="2"/>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="2">
            <CheckBox Name="chkAutoPoll" Content="Auto Poll (3s)" VerticalAlignment="Center" Margin="0,0,10,0" Checked="ChkAutoPoll_Checked" Unchecked="ChkAutoPoll_Unchecked"/>
            <Button Name="btnGet" Content="Get" Click="BtnGet_Click" Width="100"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="2">
            <Label Content="Status: " FontWeight="Bold"/>
            <Label Name="lblStatus" Content="Unknown" Foreground="Gray" FontWeight="Bold"/>
        </StackPanel>

        <TextBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Name="txtResult" Margin="2" IsReadOnly="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
    </Grid>
</Window>