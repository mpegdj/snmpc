<Application x:Class="SnmpNms.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SnmpNms.UI.Converters"
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/VSCodeTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <converters:DeviceStatusToBrushConverter x:Key="DeviceStatusToBrushConverter"/>
            <converters:PollingStatusConverter x:Key="PollingStatusConverter"/>
            <converters:TrapStatusConverter x:Key="TrapStatusConverter"/>
            <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
            <converters:ErrorToBrushConverter x:Key="ErrorToBrushConverter"/>
            <converters:BoolToBrushConverter x:Key="BoolToBrushConverter" TrueBrush="Lime" FalseBrush="Gray"/>
            <converters:BoolToBrushConverter x:Key="TrapPulseConverter" TrueBrush="Lime" FalseBrush="Gray"/>
            <converters:BoolToBrushConverter x:Key="PortPulseConverter" TrueBrush="DeepSkyBlue" FalseBrush="Gray"/>
            <converters:BoolToBrushConverter x:Key="ErrorPulseConverter" TrueBrush="Red" FalseBrush="Gray"/>
            <converters:BoolToBrushConverter x:Key="NoticePulseConverter" TrueBrush="Yellow" FalseBrush="Gray"/>
            <converters:BoolToBrushConverter x:Key="WarningPulseConverter" TrueBrush="Orange" FalseBrush="Gray"/>
            <converters:BoolToBrushConverter x:Key="InfoPulseConverter" TrueBrush="Cyan" FalseBrush="Gray"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
