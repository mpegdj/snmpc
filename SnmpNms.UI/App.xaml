<Application x:Class="SnmpNms.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SnmpNms.UI.Converters"
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/VSCodeTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <converters:DeviceStatusToBrushConverter x:Key="DeviceStatusToBrushConverter"/>
            <converters:PollingStatusConverter x:Key="PollingStatusConverter"/>
            <converters:TrapStatusConverter x:Key="TrapStatusConverter"/>
            <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
            <converters:ErrorToBrushConverter x:Key="ErrorToBrushConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
